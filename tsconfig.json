{
  "compilerOptions": {
    "module": "NodeNext",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "application",
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop":false
  },
  "include":["./src/**/*"],
  "exclude": [
    "node_modules",
    "!node_modules/@types",
]

}